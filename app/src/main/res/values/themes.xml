<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using Material3 Dark -->
    <style name="Theme.UPSCPrep" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/gradient_purple_start</item>
        <item name="colorPrimaryVariant">@color/gradient_purple_mid</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/gradient_blue_end</item>
        <item name="colorSecondaryVariant">@color/accent_coral</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>

        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.UPSCPrep.Button</item>
        <item name="textInputStyle">@style/Widget.UPSCPrep.TextInputLayout</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.UPSCPrep.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/corner_radius_md</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">@dimen/elevation_md</item>
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="Widget.UPSCPrep.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/card_background_light</item>
        <item name="boxStrokeColor">@color/border_purple</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_md</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_md</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_md</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_md</item>
    </style>
</resources>