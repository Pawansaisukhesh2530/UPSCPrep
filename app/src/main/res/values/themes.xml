<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.UPSCPrep" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/upsc_primary</item>
        <item name="colorPrimaryContainer">@color/upsc_surface_alt</item>
        <item name="colorSecondary">@color/upsc_secondary</item>
        <item name="colorTertiary">@color/upsc_accent_teal</item>
        <item name="android:colorBackground">@color/upsc_background_light</item>
        <item name="colorSurface">@color/upsc_surface_light</item>
        <item name="colorOnSurface">@color/upsc_text_primary</item>
        <item name="android:textColor">@color/upsc_text_primary</item>
        <item name="android:textColorHint">@color/upsc_text_secondary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/upsc_surface_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialButtonStyle">@style/Widget.UPSCPrep.Button</item>
        <item name="textInputStyle">@style/Widget.UPSCPrep.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.UPSCPrep.Card</item>
    </style>

    <style name="Widget.UPSCPrep.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">16dp</item>
        <item name="android:insetRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.UPSCPrep.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/card_background_light</item>
        <item name="boxStrokeColor">@color/border_purple</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <style name="Widget.UPSCPrep.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>
