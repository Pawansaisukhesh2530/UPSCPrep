<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Display Text Styles -->
    <style name="TextAppearance.UPSCPrep.Display" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">@dimen/text_size_hero</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Title Text Styles -->
    <style name="TextAppearance.UPSCPrep.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.UPSCPrep.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Headline Text Styles -->
    <style name="TextAppearance.UPSCPrep.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_xxl</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.UPSCPrep.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Body Text Styles -->
    <style name="TextAppearance.UPSCPrep.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.UPSCPrep.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Caption Text Styles -->
    <style name="TextAppearance.UPSCPrep.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.UPSCPrep.CaptionSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>
</resources>

