<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    tools:context=".ui.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lg">

        <!-- Top Section with Profile -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="@dimen/elevation_md"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/border_light"
            app:strokeWidth="@dimen/stroke_width">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_lg">

                <!-- Profile Avatar Placeholder -->
                <View
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    android:background="@drawable/gradient_purple_blue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Greeting Text -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hello Aspirant!"
                    android:textAppearance="@style/TextAppearance.UPSCPrep.TitleMedium"
                    app:layout_constraintEnd_toStartOf="@id/ivAvatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Username -->
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="Aspirant"
                    android:textAppearance="@style/TextAppearance.UPSCPrep.Headline"
                    android:textColor="@color/gradient_purple_start"
                    app:layout_constraintEnd_toStartOf="@id/ivAvatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="Dream big, work smart"
                    android:textAppearance="@style/TextAppearance.UPSCPrep.Caption"
                    app:layout_constraintEnd_toStartOf="@id/ivAvatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvUsername" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Section Title -->
        <TextView
            android:id="@+id/tvStatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="Your Progress"
            android:textAppearance="@style/TextAppearance.UPSCPrep.HeadlineSmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvHeader" />

        <!-- Stats Cards Container -->
        <HorizontalScrollView
            android:id="@+id/hsvStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/tvStatsTitle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Topics Completed Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/card_width_sm"
                    android:layout_height="@dimen/card_height_sm"
                    android:layout_marginEnd="@dimen/spacing_md"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="@dimen/corner_radius_lg"
                    app:cardElevation="@dimen/elevation_md"
                    app:strokeWidth="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_card_background"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:id="@+id/ivTopicsIcon"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_stats"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/accent_green" />

                        <TextView
                            android:id="@+id/tvTopicsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.UPSCPrep.Title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivTopicsIcon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topics"
                            android:textAppearance="@style/TextAppearance.UPSCPrep.CaptionSmall"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Study Hours Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/card_width_sm"
                    android:layout_height="@dimen/card_height_sm"
                    android:layout_marginEnd="@dimen/spacing_md"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="@dimen/corner_radius_lg"
                    app:cardElevation="@dimen/elevation_md"
                    app:strokeWidth="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_purple_blue"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:id="@+id/ivHoursIcon"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_stats"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvHoursCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.UPSCPrep.Title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivHoursIcon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hours"
                            android:textAppearance="@style/TextAppearance.UPSCPrep.CaptionSmall"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Current Streak Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/card_width_sm"
                    android:layout_height="@dimen/card_height_sm"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="@dimen/corner_radius_lg"
                    app:cardElevation="@dimen/elevation_md"
                    app:strokeColor="@color/accent_coral"
                    app:strokeWidth="@dimen/stroke_width_thick">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:id="@+id/ivStreakIcon"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_stats"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/accent_coral" />

                        <TextView
                            android:id="@+id/tvStreakCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.UPSCPrep.Title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivStreakIcon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Day Streak"
                            android:textAppearance="@style/TextAppearance.UPSCPrep.CaptionSmall"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Continue Learning Section -->
        <TextView
            android:id="@+id/tvContinueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="Continue Learning"
            android:textAppearance="@style/TextAppearance.UPSCPrep.HeadlineSmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hsvStats" />

        <!-- Featured Learning Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvFeatured"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height_lg"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="@dimen/elevation_lg"
            app:layout_constraintTop_toBottomOf="@id/tvContinueTitle"
            app:strokeWidth="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_card_background"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:id="@+id/tvSubjectLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAST STUDIED"
                    android:textAppearance="@style/TextAppearance.UPSCPrep.CaptionSmall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSubjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="Welcome to your\nUPSC preparation journey!"
                    android:textAppearance="@style/TextAppearance.UPSCPrep.Headline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSubjectLabel" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContinue"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Started"
                    android:textColor="@color/text_primary"
                    app:cornerRadius="@dimen/corner_radius_pill"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:strokeColor="@color/border_purple"
                    app:strokeWidth="@dimen/stroke_width_thick" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:layout_marginBottom="@dimen/spacing_xl"
            android:paddingStart="@dimen/spacing_xl"
            android:paddingEnd="@dimen/spacing_xl"
            android:text="Logout"
            android:textAppearance="@style/TextAppearance.UPSCPrep.Body"
            android:textColor="@color/text_primary"
            app:cornerRadius="@dimen/corner_radius_pill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvFeatured"
            app:strokeColor="@color/border_purple"
            app:strokeWidth="@dimen/stroke_width_thick" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

